---
import '../css/todo.css';
import TodoList from '../components/TodoList.astro';
---
<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>To‑Do App</title>
  </head>
  <body>
    <header class="site-header">
      <h1>Mijn To‑Do</h1>
    </header>

    <main>
      <section aria-labelledby="tasks-title">
        <h2 id="tasks-title">Taken</h2>

        <form id="new-todo-form" autocomplete="off">
          <label for="todo-input">Nieuwe taak</label>
          <input id="todo-input" name="title" placeholder="Voeg een taak toe..." required />
          <button type="submit">Toevoegen</button>
        </form>

        <TodoList />
      </section>
    </main>

    <footer class="site-footer">
      <small>&copy; 2025</small>
    </footer>

    <script type="module" src="/scripts/todo.js"></script>
  </body>
</html>